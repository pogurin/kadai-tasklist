<%= form_for(task) do |f| %>
 <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク' %>
  <p><%= f.text_field :content %></p>
 
  <p><%= f.label :status, 'ステータス' %></p>
  <p><%= f.text_field :status %></p>
  
  <%= f.submit '投稿' %>
<% end %>